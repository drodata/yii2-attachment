{
    "name": "drodata/yii2-attachment",

    "type": "yii2-extension",

    "description": "Generic AR upload module",
    "keywords": ["yii2", "attachment"],
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/drodata/yii2-attachment/issues",
        "source": "https://github.com/drodata/yii2-attachment"
    },
    "authors": [
        {
            "name": "drodata",
            "email": "drodata@foxmail.com"
        }
    ],

    "require": {
        "yiisoft/yii2": "*",
        "yiisoft/yii2-bootstrap": "~2.0"
    },

    "autoload": {
        "psr-4": {
            "dro\\attachment\\": "src"
        }
    },
	"extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        },
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
